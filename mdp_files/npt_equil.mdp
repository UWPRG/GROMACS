;
;	GROMACS
;	Input for NPT
;
;
;define			=  -DPOSRES
integrator		=  md 
nsteps			=  5000000
dt			=  0.002
;
; Removing CM Translation and Rotation
comm_mode		=  Linear 
nstcomm			=  1000
;
; Output Control 
nstlog			= 1000
nstenergy		= 100
nstxout			= 0
nstvout			= 0
nstxtcout               = 1000
nstfout			= 0
;
; Neighbour Searching
nstlist			= 10
ns_type			= grid
pbc			= xyz
rlist			= 1.4 
;
; Electrostatic
rcoulomb		= 1.4
coulombtype		= pme
fourierspacing		= 0.12
;periodic_molecules 	= yes
;
; VdW
vdw-type            	= shift
rvdw                	= 1.2 
;
; Constraints
constraints		= h-bonds 
constraint-algorithm	= lincs
lincs_iter		= 4
;
; Temperature
Tcoupl			= v-rescale 
tc_grps			= system 
tau_t			= 0.1
ref_t			= 298.15
;
; Pressure
Pcoupl			=  berendsen
Pcoupltype		=  isotropic
tau_p			=  1.0
compressibility		=  4.5e-5
ref_p			=  1.0 
;
; Initial Velocities
gen_vel			= yes
gen_temp		= 298.15
gen_seed		= -1

